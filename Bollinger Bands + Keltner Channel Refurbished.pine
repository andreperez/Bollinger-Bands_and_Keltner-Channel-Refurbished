// Last bar of previous anchor session
last_candle = switch anchor
	"Session"   => ta.valuewhen(ta.change(dayofweek(time)) != 0, bar_index, 0) - 1
	"Week"      => ta.valuewhen(ta.change(weekofyear(time)) != 0, bar_index, 0) - 1
	"Month"     => ta.valuewhen(ta.change(month(time)) != 0, bar_index, 0) - 1

var line lineUpper12_p = na
