if linesExtended != 'Never' and (barstate.islast) and (na(lineUpper12))
    lineUpper12 := line.new(x1=bar_index, y1=upper_12, x2=bar_index+80, y2=upper_12, color=linesExtended == 'Never' ? na : color.new(colorBandUp3, 0), width=2, xloc=xloc.bar_index, style=line.style_solid, extend=linesExtended == 'Extended right' ? extend.right : extend.none)
    lineUpper8 := line.new(x1=bar_index, y1=upper_8, x2=bar_index+80, y2=upper_8, color=linesExtended == 'Never' ? na : color.new(colorBandUp2, 0), width=2, xloc=xloc.bar_index, style=line.style_solid, extend=linesExtended == 'Extended right' ? extend.right : extend.none)
    lineUpper4 := line.new(x1=bar_index, y1=upper_4, x2=bar_index+80, y2=upper_4, color=linesExtended == 'Never' ? na : color.new(colorBandUp1, 0), width=2, xloc=xloc.bar_index, style=line.style_solid, extend=linesExtended == 'Extended right' ? extend.right : extend.none)
    lineBase := line.new(x1=bar_index, y1=basis, x2=bar_index+80, y2=basis, color=linesExtended == 'Never' ? na : f_changeLineColor(basis), width=2, xloc=xloc.bar_index, style=line.style_solid, extend=linesExtended == 'Extended right' ? extend.right : extend.none)
    lineLower4 := line.new(x1=bar_index, y1=lower_4, x2=bar_index+80, y2=lower_4, color=linesExtended == 'Never' ? na : color.new(colorBandDown1, 0), width=2, xloc=xloc.bar_index, style=line.style_solid, extend=linesExtended == 'Extended right' ? extend.right : extend.none)
    lineLower8 := line.new(x1=bar_index, y1=lower_8, x2=bar_index+80, y2=lower_8, color=linesExtended == 'Never' ? na : color.new(colorBandDown2, 0), width=2, xloc=xloc.bar_index, style=line.style_solid, extend=linesExtended == 'Extended right' ? extend.right : extend.none)
    lineLower12 := line.new(x1=bar_index, y1=lower_12, x2=bar_index+80, y2=lower_12, color=linesExtended == 'Never' ? na : color.new(colorBandDown3, 0), width=2, xloc=xloc.bar_index, style=line.style_solid, extend=linesExtended == 'Extended right' ? extend.right : extend.none)

    _bar_index = bar_index - last_candle
    lineUpper12_p := line.new(x1=last_candle, y1=upper_12[_bar_index], x2=bar_index+80, y2=upper_12[_bar_index], color=linesExtended == 'Never' ? na : color.new(colorBandUp3, 0), width=2, xloc=xloc.bar_index, style=line.style_dotted, extend=linesExtended == 'Extended right' ? extend.right : extend.none)
    lineUpper8_p := line.new(x1=last_candle, y1=upper_8[_bar_index], x2=bar_index+80, y2=upper_8[_bar_index], color=linesExtended == 'Never' ? na : color.new(colorBandUp2, 0), width=2, xloc=xloc.bar_index, style=line.style_dotted, extend=linesExtended == 'Extended right' ? extend.right : extend.none)
    lineUpper4_p := line.new(x1=last_candle, y1=upper_4[_bar_index], x2=bar_index+80, y2=upper_4[_bar_index], color=linesExtended == 'Never' ? na : color.new(colorBandUp1, 0), width=2, xloc=xloc.bar_index, style=line.style_dotted, extend=linesExtended == 'Extended right' ? extend.right : extend.none)

    lineBasis_p := line.new(x1=last_candle, y1=basis[_bar_index], x2=bar_index+80, y2=basis[_bar_index], color=linesExtended == 'Never' ? na : f_changeLineColor(basis), width=2, xloc=xloc.bar_index, style=line.style_dotted, extend=linesExtended == 'Extended right' ? extend.right : extend.none)

    lineLower12_p := line.new(x1=last_candle, y1=lower_12[_bar_index], x2=bar_index+80, y2=lower_12[_bar_index], color=linesExtended == 'Never' ? na : color.new(colorBandDown3, 0), width=2, xloc=xloc.bar_index, style=line.style_dotted, extend=linesExtended == 'Extended right' ? extend.right : extend.none)
    lineLower8_p := line.new(x1=last_candle, y1=lower_8[_bar_index], x2=bar_index+80, y2=lower_8[_bar_index], color=linesExtended == 'Never' ? na : color.new(colorBandDown2, 0), width=2, xloc=xloc.bar_index, style=line.style_dotted, extend=linesExtended == 'Extended right' ? extend.right : extend.none)
    lineLower4_p := line.new(x1=last_candle, y1=lower_4[_bar_index], x2=bar_index+80, y2=lower_4[_bar_index], color=linesExtended == 'Never' ? na : color.new(colorBandDown1, 0), width=2, xloc=xloc.bar_index, style=line.style_dotted, extend=linesExtended == 'Extended right' ? extend.right : extend.none)
